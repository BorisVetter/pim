{
  "controller": "controllers/record",
  "iconClass": "fas fa-list-alt",
  "boolFilterList": [
    "onlyMy",
    "notLinkedWithProduct",
    "fromAttributesTab",
    "unitTypeDisabled",
    "notLinkedWithClassificationAttribute",
    "notLinkedWithProductAttributeValue",
    "notParents",
    "notChildren"
  ],
  "hiddenBoolFilterList": [
    "notLinkedWithProduct",
    "fromAttributesTab",
    "unitTypeDisabled",
    "notLinkedWithClassificationAttribute",
    "notLinkedWithProductAttributeValue",
    "notParents",
    "notChildren"
  ],
  "disabledMassActions": [
    "merge"
  ],
  "views": {
    "list": "views/list-tree",
    "detail": "views/detail-tree"
  },
  "recordViews": {
    "detail": "pim:views/attribute/record/detail",
    "editSmall": "pim:views/attribute/record/edit-small",
    "list": "pim:views/attribute/record/list"
  },
  "modalViews": {
    "select": "pim:views/attribute/modals/select-records"
  },
  "bottomPanels": {
    "detail": [
      {
        "name": "extensibleEnumOptions",
        "label": "extensibleEnumOptions",
        "view": "views/record/panels/relationship"
      }
    ]
  },
  "relationshipPanels": {
    "parents": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notChildren"
      ]
    },
    "children": {
      "selectAction": "selectRelatedEntity",
      "selectBoolFilterList": [
        "notParents"
      ],
      "dragDrop": {
        "isActive": true,
        "sortField": "sortOrder"
      }
    },
    "productAttributeValues": {
      "create": false,
      "select": false,
      "view": "pim:views/attribute/record/panels/product-attribute-values",
      "rowActionsView": "views/record/row-actions/relationship-no-unlink",
      "layout": "listInAttribute"
    }
  },
  "dynamicLogic": {
    "fields": {
      "extensibleEnum": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "enum",
                "multiEnum"
              ]
            }
          ]
        }
      },
      "isMultilang": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "bool",
                "varchar",
                "text",
                "wysiwyg",
                "asset"
              ]
            }
          ]
        }
      },
      "sortOrder": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "isRoot"
            }
          ]
        }
      },
      "type": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "assetType": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "asset"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "asset"
            }
          ]
        }
      },
      "pattern": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "type",
              "value": "varchar"
            }
          ]
        }
      },
      "unique": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "asset",
                "currency",
                "date",
                "datetime",
                "float",
                "int",
                "unit",
                "url",
                "varchar"
              ]
            }
          ]
        }
      },
      "isSorted": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "enum",
                "multiEnum"
              ]
            }
          ]
        }
      },
      "prohibitedEmptyValue": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "enum",
                "unit"
              ]
            }
          ]
        }
      },
      "enumDefault": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "enum"
              ]
            }
          ]
        }
      },
      "measure": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "unit"
              ]
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "unit"
              ]
            }
          ]
        }
      },
      "unitDefault": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "type",
              "value": [
                "unit"
              ]
            }
          ]
        }
      },
      "defaultChannel": {
        "visible": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "defaultScope",
              "value": "Channel"
            }
          ]
        },
        "required": {
          "conditionGroup": [
            {
              "type": "equals",
              "attribute": "defaultScope",
              "value": "Channel"
            }
          ]
        }
      }
    }
  }
}