{
  "fields": {
    "name": {
      "type": "varchar",
      "required": true,
      "trim": true,
      "isMultilang": true
    },
    "description": {
      "type": "text",
      "required": false,
      "rows": 4,
      "lengthOfCut": 400,
      "seeMoreDisabled": false,
      "readOnly": false,
      "tooltip": false,
      "isMultilang": true
    },
    "code": {
      "type": "varchar",
      "massUpdateDisabled": true,
      "trim": true,
      "view": "pim:views/fields/code-from-name",
      "pattern": "/^[a-z_0-9{}]+$/"
    },
    "isActive": {
      "notNull": true,
      "type": "bool",
      "default": false,
      "audited": false,
      "readOnly": false,
      "tooltip": false
    },
    "createdAt": {
      "type": "datetime",
      "readOnly": true
    },
    "modifiedAt": {
      "type": "datetime",
      "readOnly": true
    },
    "createdBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "modifiedBy": {
      "type": "link",
      "readOnly": true,
      "view": "views/fields/user"
    },
    "products": {
      "type": "linkMultiple",
      "layoutDetailDisabled": true,
      "layoutListDisabled": true,
      "massUpdateDisabled": true,
      "noLoad": true
    },
    "classificationAttributes": {
      "type": "linkMultiple",
      "layoutListDisabled": true,
      "layoutListSmallDisabled": true,
      "layoutDetailDisabled": true,
      "layoutDetailSmallDisabled": true,
      "massUpdateDisabled": true,
      "noLoad": true
    }
  },
  "links": {
    "createdBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "modifiedBy": {
      "type": "belongsTo",
      "entity": "User"
    },
    "products": {
      "type": "hasMany",
      "foreign": "classification",
      "entity": "Product"
    },
    "classificationAttributes": {
      "type": "hasMany",
      "foreign": "classification",
      "entity": "ClassificationAttribute"
    }
  },
  "collection": {
    "sortBy": "createdAt",
    "asc": false,
    "textFilterFields": [
      "name",
      "code"
    ]
  },
  "indexes": {
    "name": {
      "columns": [
        "name",
        "deleted"
      ]
    }
  }
}
